    <title>{%page.suggestion.title%} - {%application.title%}</title>
</head>
<body itemscope="" itemtype="http://schema.org/WebPage">
    <div id="header">
        <div class="wrapper" itemscope="" itemtype="http://schema.org/Organization">
            <h1><a href="/?lang={%LANGUAGE_TAG%}">{%application.title%}</a></h1>
            <div class="header-nav">
                <p class="welcome">{%page.welcome.hello%}{%page.welcome.caption%} <a href="javascript:void(0)" onmousedown="javascript:languageMenu.show(event,1)">{%application.language.name%}</a> | {%user.profile%} {%user.status%}</p>
                <ul class="top-menu">
                    <li><a href='[%LINK:bible%]' title="{%navigator.bible.caption%}">{%navigator.bible.caption%}</a></li>
                    <li><a href='[%LINK:dashboard%]' title="{%navigator.controller.caption%}">{%navigator.controller.caption%}</a></li>
                    <li><a href='[%LINK:suggestion%]' title="{%navigator.help.caption%}">{%navigator.help.caption%}</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div id="headline">
        <div class="wrapper">
            <h2>{%page.suggestion.title%}</h2>
        </div>
    </div>

    <div id="pagebody">
        <div class="wrapper">
            {%error%}
            <div class="search-results">
                {%value%}
            </div>
        </div>
    </div>

    <div id="footer">
        <div class="wrapper">
            <p>
                <a href="[%LINK:suggestion%]">{%footer.report-a-site-bug%}</a>
                <a href="[%LINK:help%]">{%footer.privacy%}</a>
                <a href="[%LINK:user/register%]">{%footer.register%}</a>
                <a href="[%LINK:bible/api%]">{%footer.api%}</a>
                <a href="[%LINK:feed%]" class="rsslink">{%footer.updates-rss%}</a>
            </p>
            <div style="font-size: 0.8rem; opacity: 0.5; margin-top: 2rem;">&copy; In God .today - tinystruct framework</div>
        </div>
    </div>

    <script type="text/javascript">
        if(document.sitesearch && document.sitesearch.keyword) {
            window.listener.install(document.sitesearch, document.sitesearch.keyword, "keyword.jsp", false, "×");
        }

        $(document).ready(function() {
            $('#sitesearch').submit(function() {
                var keyword = $('#keyword').val();
                if (keyword) keyword = keyword.trim();
                if (!keyword || keyword === "") return false;

                var btn = $('#searchButton');
                btn.addClass('searching');
                btn.find('.button-text').text('Thinking...');
                
                var timer = setTimeout(function() {
                    btn.attr('disabled', 'disabled');
                }, 20);
            });
        });
    </script>
</body>
</html>