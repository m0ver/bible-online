    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&amp;l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-M4N6DS4N');</script>
    <title>{%page.findlostpassword.title%} - {%application.title%}</title>
</head>
<body>
    <div id="header">
        <div class="wrapper">
            <h1><a href="/?lang={%LANGUAGE_TAG%}">{%application.title%}</a></h1>
            <div class="header-nav">
                <p class="welcome">{%page.welcome.hello%}{%page.welcome.caption%} <a href="javascript:void(0)" onmousedown="javascript:languageMenu.show(event,1)">{%application.language.name%}</a> | {%user.profile%} {%user.status%}</p>
                <ul class="top-menu">
                    <li><a href='[%LINK:bible%]' title="{%navigator.bible.caption%}">{%navigator.bible.caption%}</a></li>
                    <li><a href='[%LINK:dashboard%]' title="{%navigator.controller.caption%}">{%navigator.controller.caption%}</a></li>
                    <li><a href='[%LINK:suggestion%]' title="{%navigator.help.caption%}">{%navigator.help.caption%}</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div id="headline">
        <div class="wrapper">
            <h2>{%page.findlostpassword.title%}</h2>
        </div>
    </div>

    <div id="pagebody">
        <div class="wrapper">
            <div class="form-card">
                <form method="post" onsubmit="return send()">
                    <div class="form-group">
                        <p style="margin-bottom: 2rem; color: var(--text-light); text-align: center;">{%login.find-password.tips%}</p>
                    </div>
                    <div class="form-group">
                        <label for="email">{%login.user.email%}</label>
                        <input class="form-control" id="email" name="email" type="email" placeholder="email@example.com" />
                    </div>
                    <div class="form-group" style="margin-top: 2rem;">
                        <input type="submit" class="inputbutton" value="{%login.get-password%}" />
                    </div>
                    <div id="message"></div>
                </form>
            </div>
        </div>
    </div>

    <div id="footer">
        <div class="wrapper">
            <p>
                <a href="[%LINK:suggestion%]">{%footer.report-a-site-bug%}</a>
                <a href="[%LINK:help%]">{%footer.privacy%}</a>
                <a href="[%LINK:user/register%]">{%footer.register%}</a>
                <a href="[%LINK:bible/api%]">{%footer.api%}</a>
                <a href="[%LINK:feed%]" class="rsslink">{%footer.updates-rss%}</a>
            </p>
            <div style="font-size: 0.8rem; opacity: 0.5; margin-top: 2rem;">&copy; In God .today - tinystruct framework</div>
        </div>
    </div>
</body>
</html>
