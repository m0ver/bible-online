<!DOCTYPE html>
<html lang="{%language_code%}">
<head>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link href="{%TEMPLATES_DIR%}/images/favicon.png" rel="icon" type="image/x-icon"/>
    <link href="{%TEMPLATES_DIR%}/images/favicon.png" rel="shortcut icon" type="image/x-icon"/>
    
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #2583ad;
            --accent: #2583ad;
            --bg-soft: #fcfcfc;
            --border-color: #e2e8f0;
            --text-color: #334155;
            --text-light: #64748b;
            --hover-bg: #f8fafc;
        }

        body {
            font-family: 'Inter', sans-serif;
            color: var(--text-color);
            background-color: var(--bg-soft);
            margin: 0;
            line-height: 1.7;
        }

        h1, h2, h3, .serif-font {
            font-family: 'Crimson Pro', serif;
        }

        .wrapper {
            max-width: 1100px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        #header {
            background-color: #ffffff;
            padding: 1.25rem 0;
            border-bottom: 1px solid var(--border-color);
            box-shadow: 0 1px 2px rgba(0,0,0,0.03);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        #header .wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        #header h1 { margin: 0; line-height: 1; }
        #header h1 a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            font-size: 1.75rem;
        }

        .header-nav {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .welcome {
            font-size: 0.85rem;
            color: var(--text-light);
        }

        .welcome a {
            color: var(--text-color);
            text-decoration: none;
            border-bottom: 1px solid var(--accent);
        }

        .top-menu {
            display: flex;
            gap: 1.5rem;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .top-menu li a {
            color: var(--text-color);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.2s;
        }

        .top-menu li a:hover {
            color: var(--accent);
        }

        #headline {
            background-color: var(--primary);
            padding: 4rem 0;
            color: white;
            text-align: center;
            background-image: radial-gradient(circle at 50% 50%, rgba(30, 41, 59, 0.8), #0f172a);
        }

        #headline h2 {
            margin: 0;
            font-size: 2.5rem;
            font-weight: 600;
        }

        #pagebody {
            padding: 4rem 0;
            min-height: 50vh;
        }

        .form-card {
            background: white;
            padding: 3rem;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            font-size: 0.95rem;
            color: var(--text-color);
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 0.85rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-family: inherit;
            box-sizing: border-box;
            font-size: 1rem;
            transition: border-color 0.2s;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 2px rgba(37, 131, 173, 0.1);
        }

        .inputbutton {
            background-color: var(--accent);
            color: white;
            border: none;
            padding: 0.85rem 2rem;
            font-weight: 600;
            cursor: pointer;
            border-radius: 6px;
            transition: all 0.2s;
            font-size: 1rem;
            width: 100%;
        }

        .inputbutton:hover {
            background-color: #1e6a8d;
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(37, 131, 173, 0.2);
        }

        #message {
            margin-top: 1rem;
            padding: 1rem;
            border-radius: 6px;
            font-size: 0.95rem;
        }

        #footer {
            background: #0f172a;
            padding: 5rem 0;
            color: #94a3b8;
            text-align: center;
        }

        #footer .wrapper p { margin-bottom: 2rem; }

        #footer a {
            color: #e2e8f0;
            text-decoration: none;
            margin: 0 1rem;
            font-size: 0.9rem;
            opacity: 0.7;
            transition: opacity 0.2s;
        }

        #footer a:hover { opacity: 1; color: white; }

        @media (max-width: 768px) {
            #header .wrapper { flex-direction: column; gap: 1.5rem; text-align: center; }
            .header-nav { flex-direction: column; gap: 1rem; }
            .form-card { padding: 2rem; }
            #headline h2 { font-size: 2rem; }
        }
    </style>

    <script type="text/javascript" src="{%TEMPLATES_DIR%}/scripts/jquery-1.5.1.js" charset="utf-8"></script>
    <script type="text/javascript" src="{%TEMPLATES_DIR%}/scripts/timer.js" charset="utf-8"></script>
    <script type="text/javascript" src="{%TEMPLATES_DIR%}/scripts/struct.js" charset="utf-8"></script>
    <script type="text/javascript" src="{%TEMPLATES_DIR%}/scripts/{%language%}.js" charset="utf-8"></script>
    <script type="text/javascript" src="{%TEMPLATES_DIR%}/scripts/tools.js" charset="utf-8"></script>
    <script type="text/javascript">
    //<![CDATA[
        var profileMenu;
        var languageMenu;
        struct.attachOnLoadEvent(function(){
            profileMenu = new Menu();
            languageMenu = new Menu();
            
            profileMenu.appendItem({"action":"javascript:location.href='[%LINK:user/logout%]'","caption":"{%page.logout.caption%}"});
            
            languageMenu.setAutoReposition(true);
            languageMenu.appendItem({"action":"javascript:location.href='{%action%}&lang=en-GB'","caption":"English(UK)"});
            languageMenu.appendItem({"action":"javascript:location.href='{%action%}&lang=en-US'","caption":"English(US)"});
            languageMenu.appendItem({"action":"javascript:location.href='{%action%}&lang=zh-CN'","caption":"简体中文"});
            languageMenu.appendItem({"action":"javascript:location.href='{%action%}&lang=zh-TW'","caption":"繁体中文"});
        });
        
        var email="";
        function getEmailLoginUrl() {
            if(this.email.indexOf("@gmail.com")!=-1) {
                return "<a href=\"http://www.gmail.com\" style=\"color:var(--accent); text-decoration:underline;\">Log in to Gmail to check this email!</a>";
            }
            return "";
        }

        function send() {
            var emailVal = document.getElementById("email").value;
            if(emailVal != null && emailVal) {
                this.email = emailVal;
                $.ajax({url:"[%LINK:user/password%]/"+this.email})
                    .success(function(data){
                        if(data.indexOf("true")==0)
                            document.getElementById("message").innerHTML = "<div style='color: #059669; background: #ecfdf5; padding: 1rem; border-radius: 6px; border: 1px solid #10b981;'>Password reset email sent successfully! "+getEmailLoginUrl()+"</div>";
                        else
                            document.getElementById("message").innerHTML = "<div style='color: #dc2626; background: #fef2f2; padding: 1rem; border-radius: 6px; border: 1px solid #ef4444;'>Failed to send password reset email! Maybe the email address is incorrect or not registered. <a href=\"[%LINK:user/password%]\" style='color: #dc2626; font-weight: bold;'>Click here to try again</a></div>";
                    })
                    .error(function(){
                        alert("The page you requested has an exception.");
                    });
            } else {
                alert("Please fill in the email address correctly!");
            }
            return false;
        }

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '392100062']);
        _gaq.push(['_trackPageview']);
        
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    //]]>
    </script>
