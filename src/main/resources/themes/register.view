    <style>
        :root {
            --primary: #2583ad;
            --accent: #2583ad;
            --bg-soft: #fcfcfc;
            --border-color: #e2e8f0;
            --text-color: #334155;
            --text-light: #64748b;
            --hover-bg: #f8fafc;
            --required: #ef4444;
        }

        body {
            font-family: 'Inter', sans-serif;
            color: var(--text-color);
            background-color: var(--bg-soft);
            margin: 0;
            line-height: 1.7;
        }

        h1, h2, h3, .serif-font {
            font-family: 'Crimson Pro', serif;
        }

        .wrapper {
            max-width: 1100px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        #header {
            background-color: #ffffff;
            padding: 1.25rem 0;
            border-bottom: 1px solid var(--border-color);
            box-shadow: 0 1px 2px rgba(0,0,0,0.03);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        #header .wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        #header h1 { margin: 0; line-height: 1; }
        #header h1 a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            font-size: 1.75rem;
        }

        .header-nav {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .welcome {
            font-size: 0.85rem;
            color: var(--text-light);
        }

        .welcome a {
            color: var(--text-color);
            text-decoration: none;
            border-bottom: 1px solid var(--accent);
        }

        .top-menu {
            display: flex;
            gap: 1.5rem;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .top-menu li a {
            color: var(--text-color);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.2s;
        }

        .top-menu li a:hover {
            color: var(--accent);
        }

        #headline {
            background-color: var(--primary);
            padding: 3rem 0;
            color: white;
            text-align: center;
            background-image: radial-gradient(circle at 50% 50%, rgba(30, 41, 59, 0.8), #0f172a);
        }

        #headline h2 {
            font-size: 1.5rem;
            margin-bottom: 0;
            color: white;
        }

        #pagebody {
            padding: 4rem 0;
        }

        .register-card {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 3rem;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        }

        .register-card h3 {
            margin-top: 2rem;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            color: var(--primary);
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 0.5rem;
        }

        .required { color: var(--required); }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        @media (max-width: 600px) {
            .form-grid { grid-template-columns: 1fr; }
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            font-size: 0.9rem;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.8rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-family: inherit;
            box-sizing: border-box;
            font-size: 1rem;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(37, 131, 173, 0.1);
        }

        .radio-group {
            display: flex;
            gap: 1.5rem;
            margin-top: 0.5rem;
        }

        .radio-item {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            font-size: 0.9rem;
        }

        .inputbutton {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 1rem 3rem;
            font-weight: 600;
            cursor: pointer;
            border-radius: 6px;
            transition: opacity 0.2s;
            font-size: 1rem;
            margin-top: 2rem;
        }

        .inputbutton:hover { opacity: 0.9; }

        /* Framework Menu/Dropdown Styling Override */
        #menu, #dialog, #tdialog {
            background: white !important;
            border: 1px solid var(--border-color) !important;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
            border-radius: 8px !important;
            padding: 8px 0 !important;
            z-index: 9999 !important;
        }

        #menu ul li a {
            font-family: 'Inter', sans-serif !important;
            font-size: 0.9rem !important;
            padding: 8px 20px !important;
            color: var(--text-color) !important;
        }

        #menu ul li a:hover {
            background: var(--hover-bg) !important;
            color: var(--accent) !important;
        }

        #footer {
            background: #0f172a;
            padding: 5rem 0;
            color: #94a3b8;
            text-align: center;
        }

        #footer .wrapper p { margin-bottom: 2rem; }

        #footer a {
            color: #e2e8f0;
            text-decoration: none;
            margin: 0 1rem;
            font-size: 0.9rem;
            opacity: 0.7;
            transition: opacity 0.2s;
        }

        #footer a:hover { opacity: 1; color: white; }

        @media (max-width: 900px) {
            #header .wrapper { flex-direction: column; gap: 1.5rem; text-align: center; }
            .header-nav { flex-direction: column; gap: 1rem; }
        }
    </style>

