                                <option value="ZM">Zambia</option>
                                <option value="ZW">Zimbabwe</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label for="zip-postal-code">{%register.postal-code.caption%} <span class="required">*</span></label>
                            <input class="form-control" name="zip-postal-code" id="zip-postal-code" value="{%postcode%}" type="text" />
                        </div>
                        
                        <div class="form-group">
                            <label for="telephone">{%register.phone.caption%}</label>
                            <input class="form-control" name="telephone" id="telephone" value="{%telephone%}" type="text" />
                        </div>
                    </div>

                    <div style="text-align: center;">
                        <input class="inputbutton" value="{%register%}" type="submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>

